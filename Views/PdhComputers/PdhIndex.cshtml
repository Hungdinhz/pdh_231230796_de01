@model IEnumerable<pdh_231230796_de01.Models.PdhComputer>

@{
    ViewData["Title"] = "Danh sách máy tính";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-laptop"></i> Danh sách máy tính</h3>
            <a asp-action="PdhCreate" class="btn btn-light fw-bold">
                <i class="bi bi-plus-circle"></i> Thêm mới
            </a>
        </div>

        <div class="card-body p-4">
            <table class="table table-hover align-middle text-center">
                <thead class="table-primary">
                    <tr>
                        <th>Tên máy</th>
                        <th>Giá bán</th>
                        <th>Hình ảnh</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-row">
                            <td class="fw-semibold">@item.PdhComName</td>
                            <td>@String.Format("{0:N0} VNĐ", item.PdhComPrice)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.PdhComImage))
                                {
                                    <img src="@item.PdhComImage" alt="Ảnh @item.PdhComName" width="80" height="80" class="rounded-3 shadow-sm" style="object-fit: cover;" />
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Không có ảnh</span>
                                }
                            </td>
                            <td>
                                @if (item.PdhComStatus)
                                {
                                    <span class="badge bg-success px-3 py-2">Còn hàng</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger px-3 py-2">Hết hàng</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="PdhDetails" asp-route-id="@item.PdhComId" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-eye"></i> Xem
                                    </a>
                                    <a asp-action="PdhEdit" asp-route-id="@item.PdhComId" class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </a>
                                    <a asp-action="PdhDelete" asp-route-id="@item.PdhComId" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
}
