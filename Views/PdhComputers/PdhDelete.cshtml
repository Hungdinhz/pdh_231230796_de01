@model pdh_231230796_de01.Models.PdhComputer

@{
    ViewData["Title"] = "Xóa máy tính";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 col-md-6 mx-auto">
        <div class="card-header bg-danger bg-gradient text-white rounded-top-4 d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-trash3"></i> Xác nhận xóa máy tính</h4>
            <a asp-action="PdhIndex" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>

        <div class="card-body p-4">
            <div class="alert alert-warning d-flex align-items-center" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                <div>
                    <strong>Bạn có chắc muốn xóa máy tính này không?</strong><br />
                    Hành động này không thể hoàn tác.
                </div>
            </div>

            <dl class="row mb-4">
                <dt class="col-sm-4 fw-semibold">Tên máy:</dt>
                <dd class="col-sm-8">@Model.PdhComName</dd>

                <dt class="col-sm-4 fw-semibold">Giá bán:</dt>
                <dd class="col-sm-8">@String.Format("{0:N0} VNĐ", Model.PdhComPrice)</dd>

                <dt class="col-sm-4 fw-semibold">Hình ảnh:</dt>
                <dd class="col-sm-8">
                    @if (!string.IsNullOrEmpty(Model.PdhComImage))
                    {
                        <img src="@Model.PdhComImage" alt="Ảnh @Model.PdhComName" width="100" height="100" class="rounded shadow-sm" style="object-fit: cover;" />
                    }
                    else
                    {
                        <span class="text-muted fst-italic">Không có ảnh</span>
                    }
                </dd>

                <dt class="col-sm-4 fw-semibold">Trạng thái:</dt>
                <dd class="col-sm-8">
                    @if (Model.PdhComStatus)
                    {
                        <span class="badge bg-success px-3 py-2">Còn hàng</span>
                    }
                    else
                    {
                        <span class="badge bg-danger px-3 py-2">Hết hàng</span>
                    }
                </dd>
            </dl>

            <form asp-action="PdhDelete" class="text-center">
                <input type="hidden" asp-for="PdhComId" />
                <button type="submit" class="btn btn-danger px-4 me-2">
                    <i class="bi bi-trash"></i> Xóa
                </button>
                <a asp-action="PdhIndex" class="btn btn-secondary px-4">
                    <i class="bi bi-x-circle"></i> Hủy
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
}
